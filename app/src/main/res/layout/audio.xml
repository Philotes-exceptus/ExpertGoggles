<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/startRecord"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/stopRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microphone" />

    <Button
        android:id="@+id/stopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Stop recording"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/startPlaying"
        app:layout_constraintEnd_toEndOf="@+id/startRecord"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/startRecord"
        app:layout_constraintTop_toBottomOf="@+id/startRecord" />

    <Button
        android:id="@+id/startPlaying"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="Start playing"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/stopPlaying"
        app:layout_constraintEnd_toEndOf="@+id/stopRecord"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/stopRecord"
        app:layout_constraintTop_toBottomOf="@+id/stopRecord" />

    <Button
        android:id="@+id/stopPlaying"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="Stop playing"
        android:textAllCaps="false"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/startPlaying"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/startPlaying"
        app:layout_constraintTop_toBottomOf="@+id/startPlaying" />


</androidx.constraintlayout.widget.ConstraintLayout>





















